  --headercolor: #8ab6c9;
  --footercolor: #8ab6c9;
  --lightcolor: #0aefff;
  --heavycolor: #3f689e;
}

.title-pannel {
  position: fixed;
  width: 100vw;
  text-align: center;
  top: 18vw;
  color: var(--textColor);
  font-size: 8vw;
  font-weight: lighter;
}

.countdown {
  position: fixed;
  width: 100vw;
  text-align: center;
  top: 40vw;
  font-size: 8vw;
  /* font-weight: lighter; */
}

.countdown-text {
  font-weight: lighter;
}

.fish {
  position: fixed;
  bottom: 38vw;
  left: 72vw;
  height: 18vw;
  width: 18vw;
  overflow: hidden;
}

.fish image {
  position: relative;
  width: 162vw;
  height: 18vw;
}


.bottom-text {
  width: 100vw;
  text-align: center;
  position: fixed;
  bottom: 8vw;
}

.bottom-text text {
  color: rgba(0, 0, 0, 0.5);
  font-size: 3vw;
  font-weight: lighter;
}
.progress-content{
 position: absolute;
 width:80%;
 height:100%;
 border-radius: 25rpx;
 background: -webkit-linear-gradient(45deg,
      var(--heavycolor) 20%, var(--lightcolor) 20%,
      var(--lightcolor) 40%, var(--heavycolor) 40%,
      var(--heavycolor) 60%, var(--lightcolor) 60%,
      var(--lightcolor) 80%, var(--heavycolor) 80%);
opacity:0.5;
}
.progress{
  position:fixed;
  width: 80vw;
  height: 50rpx;
  margin-top: 50vh;
  margin-left:10vw;
  border-radius: 25rpx;
  border:1px solid #ccc;
  /* overflow: hidden; */
  box-shadow: 0 0 5px 0px #ddd inset;
}
.text{
  position: absolute; 
  font-size:30rpx;
  width:100%;
  /* left:50%;
  top:50%;
  transform: translate(-50%,-50%); */
  text-align: center;
  line-height: 50rpx;
  color:#000;
  z-index:3;
}