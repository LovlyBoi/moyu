.cell-group {
  margin-top: 230rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--midColor);
}

.user-wrapper {
  height: 35vw;
  width: 100vw;
  background-color: var(--midColor);
}

.container {
  position: relative;
  left: 10vw;
  top: 17.5vw;
  height: 35vw;
  width: 80vw;
  border-radius: 19px;
  background-color: white;
}

.container button {
  position: relative;
  top: 17.5vw;
  transform: translateY(-50%);
}